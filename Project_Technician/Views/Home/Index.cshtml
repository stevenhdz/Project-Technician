@model IEnumerable<Project_Technician.Models.Employee>

@{
    ViewData["Title"] = "Home Page";
}


@{
    Layout = "_Layout";
}


<center><h1 class="font-weight-light">Lista de Servicios</h1></center>

<style>


    .table-earnings {
        background: #F3F5F6;
    }

    table {
        display: block;
        height: 650px;
        overflow-y: auto;
    }

    * {
        box-sizing: border-box;
    }

   #myInput {
    background-image: url('/css/searchicon.png'); /* Add a search icon to input */
    background-position: 10px 12px; /* Position the search icon */
    background-repeat: no-repeat; /* Do not repeat the icon image */
    width: 100%; /* Full-width */
    font-size: 16px; /* Increase font-size */
    padding: 12px 20px 12px 40px; /* Add some padding */
    border: 1px solid #ddd; /* Add a grey border */
    margin-bottom: 12px; /* Add some space below the input */
}

#myTable {
    border-collapse: collapse; /* Collapse borders */
    width: 100%; /* Full-width */
    border: 1px solid #ddd; /* Add a grey border */
    font-size: 18px; /* Increase font-size */
}

#myTable th, #myTable td {
    text-align: left; /* Left-align text */
    padding: 12px; /* Add padding */
}

#myTable tr {
    /* Add a bottom border to all table rows */
    border-bottom: 1px solid #ddd; 
}

#myTable tr.header, #myTable tr:hover {
    /* Add a grey background color to the table header and on hover */
    background-color: #f1f1f1;
}
</style>


<p>
    <a asp-action="New" class="btn btn-sm text-light bg-primary rounded-0 text-uppercase"><i class="fas fa-plus-circle"></i>Agregar</a>
    <a href="../Employee/Index" class="btn btn-sm text-light bg-danger rounded-0 text-uppercase"><i class="fas fa-plus-circle"></i>Editar</a>
    <a asp-action="Excel" class="btn btn-sm text-light bg-primary rounded-0 text-uppercase"><i class="fas fa-plus-circle"></i>Exportar Excel</a>
    <a asp-action="Csv" class="btn btn-sm text-light bg-primary rounded-0 text-uppercase"><i class="fas fa-plus-circle"></i>Exportar Csv</a>
    <a asp-action="UploadEmployee" class="btn btn-sm text-light bg-primary rounded-0 text-uppercase"><i class="fas fa-plus-circle"></i>Importar Csv</a> 
</p>



<!--filtrar por id="myTable-->
<center>
    <div class="col-md-6 form-control info-color">
        <input class="form-control my-0 py-1 amber-border" type="text" id="myInput" onkeyup="myFunction()" placeholder="Filtrar" title="Filtrar">
    </div>
</center>


<table id="myTable" class="table text-monospace text-uppercase table-striped table-bordered"
       width="300">


    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullNombre)
            </th>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaIngreso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaEntrega)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GarantiaMarca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GarantiaTecnica)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoServicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorPagar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadEquipos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroCelular)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correos)
            </th>
        </tr>
    </thead>
    <tbody>

        
        @foreach (var employee in Model)
        {
            <tr>
                <td>
                @employee.Nombre
                @employee.Apellido
                </td>
                <td>

                    <a href="~/images/@employee.ProfilePicture"
                       class="rounded-circle"
                       height="50" width="50"
                       asp-append-version="true">


                        <img src="~/images/@employee.ProfilePicture"
                             height="50" width="50"
                             asp-append-version="true" />
                    </a>
                    <br />
                    

                </td>
                <td>
                    @employee.Cedula
                </td>
                <td>
                    @employee.direccion
                </td>
                <td>
                    @employee.FechaIngreso
                </td>
                <td>
                    @employee.FechaEntrega
                </td>
                <td>
                    @employee.Tipo
                </td>
                <td>
                    @employee.Serial
                </td>
                <td>
                    @employee.Marca
                </td>
                <td>
                
                     <span class="d-inline-block text-truncate" style="max-width: 150px;">
                        @employee.Descripcion
                     </span>
                  
                </td>
                <td>
                    @employee.GarantiaMarca
                </td>
                <td>
                    @employee.GarantiaTecnica
                </td>
                <td>
                    @employee.TipoServicio
                </td>
                <td>
                  $@employee.ValorPagar
                </td>
                <td>
                    @employee.CantidadEquipos
                </td>
                <td>
                    @employee.NumeroCelular
                </td>
                <td>
                    @employee.Correos
                </td>
            </tr>
        }
    </tbody>
</table>


<script>
    
    function myFunction() {
  // Declare variables 
  var input, filter, table, tr, td, i, j, visible;
  input = document.getElementById("myInput");
  filter = input.value.toUpperCase();
  table = document.getElementById("myTable");
  tr = table.getElementsByTagName("tr");

  // Loop through all table rows, and hide those who don't match the search query
  for (i = 0; i < tr.length; i++) {
    visible = false;
    /* Obtenemos todas las celdas de la fila, no sólo la primera */
    td = tr[i].getElementsByTagName("td");
    for (j = 0; j < td.length; j++) {
      if (td[j] && td[j].innerHTML.toUpperCase().indexOf(filter) > -1) {
        visible = true;
      }
    }
    if (visible === true) {
      tr[i].style.display = "";
    } else {
      tr[i].style.display = "none";
    }
  }
}


    </script>
